<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/avatar_default"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/text_view_name"
        app:layout_constraintStart_toEndOf="@id/image_view_avatar"
        app:layout_constraintEnd_toStartOf="@id/text_view_likes"
        app:layout_constraintTop_toTopOf="@id/image_view_avatar"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="UserName"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/text_view_name"
        app:layout_constraintEnd_toEndOf="@id/text_view_name"
        app:layout_constraintTop_toBottomOf="@id/text_view_name"
        android:textSize="12dp"
        android:text="timesteamp"/>
    <TextView
        android:id="@+id/text_view_likes"
        app:layout_constraintStart_toEndOf="@id/text_view_name"
        app:layout_constraintEnd_toStartOf="@id/image_view_check"
        app:layout_constraintTop_toTopOf="@id/image_view_check"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="123"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="end" />
    <ImageView
        android:id="@+id/image_view_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/image_view_avatar"
        app:layout_constraintBottom_toBottomOf="@id/image_view_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_check_false"
        android:text="100"
        android:textSize="20dp"/>
    <com.example.inspboard.views.SquareImageView
        android:id="@+id/image_view_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/image_view_avatar"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_default"/>
</androidx.constraintlayout.widget.ConstraintLayout>